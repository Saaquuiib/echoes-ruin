{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Room",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "size": {
      "type": "object",
      "properties": {
        "width": { "type": "number" },
        "height": { "type": "number" }
      },
      "required": ["width", "height"]
    },
    "entities": {
      "type": "array",
      "items": { "$ref": "entities.schema.json" }
    }
  },
  "required": ["id", "size"]
}
